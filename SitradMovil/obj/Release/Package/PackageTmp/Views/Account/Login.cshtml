@model BusinessEntity.BEUsuario
@{
    ViewBag.Title = "Login";
}
<p>&nbsp;</p>
<div class="row center-align">
    <img src="~/img/img-LogoMVCS.png" />
</div>
<div class="row center-align">
    <img src="~/img/logo-login.png" />
</div>
<div class="row">
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <form class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <i class="material-icons prefix">account_circle</i>
                @*<input placeholder="ejm. jvalle" id="UserName" type="text" class="validate">*@
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "validate", @placeholder = "ejm: jcastro" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                <label for="usuario">Usuario</label>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">vpn_key</i>
                @*<input placeholder="******" id="Password" type="password" class="validate">*@
                
                @Html.PasswordFor(model => model.Password,  new { @class = "validate", @placeholder = "********" } )
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <label for="password">Password</label>
            </div>
        </div>
        <div class="row center-align">
            <div class="col s12">
                <button class="btn waves-effect waves-light btn-blue" type="submit" name="action">
                    Ingresar
                    <i class="material-icons right">input</i>
                </button>
            </div>
        </div>
    </form>
}
</div>
<script>
    alerta = "@Model.Alerta";
    
</script>


